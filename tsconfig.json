{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ESNext"
      ],
      "allowJs": true,
      "checkJs": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "declarationMap": true,
      "declarationDir": "./dist",
      "noEmit": false,
      "strict": true,
      "noImplicitThis": false,
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true
    },
    "include": [
      "src"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.js",
        "**/*.test.ts",
        "**/*.test.js",
    ]
  }
  