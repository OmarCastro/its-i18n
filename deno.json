{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": false
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["src/utils/store/translation-store.test.ts--filesystem"],
    "useTabs": false,
    "lineWidth": 140,
    "indentWidth": 2,
    "singleQuote": true,
    "semiColons": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["src/"],
    "exclude": [
      "src/utils/store/translation-store.test.ts--filesystem",
      "src/utils/store/translation-store.test.ts"
    ],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  }
}
