{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "esnext"],
    "strict": false
  },
  "fmt": {
    "files": {
      "include": ["src/"],
      "exclude": ["src/utils/store/translation-store.test.ts--filesystem"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 140,
      "indentWidth": 2,
      "singleQuote": true,
      "semiColons": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": [
        "src/utils/store/translation-store.test.ts--filesystem",
        "src/utils/store/translation-store.test.ts",
        "src/utils/key-parser/key-parser.util.test.ts"
      ]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  }
}
